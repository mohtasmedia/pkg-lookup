{
  "name": "pkgstats",
  "version": "0.1.1",
  "description": "Get statistics on packages",
  "author": "Tom Sturge",
  "license": "MIT",
  "module": "dist/index.es.js",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "scripts": {
    "bump": "standard-version",
    "test": "npm run lint",
    "build": "npm-run-all --silent clean -p rollup -p size",
    "clean": "rimraf dist",
    "rollup": "rollup -c",
    "size": "echo \"Gzipped Size: $(gzip-size $npm_package_main)\"",
    "release": "npm run build -s && npm run bump && git push --follow-tags origin master && npm publish"
  },
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohtasmedia/pkgstats.git"
  },
  "keywords": [
    "package",
    "statistics",
    "pkg",
    "stats",
    "npm",
    "information"
  ],
  "bugs": {
    "url": "https://github.com/mohtasmedia/pkgstats/issues"
  },
  "homepage": "https://github.com/mohtasmedia/pkgstats#readme",
  "devDependencies": {
    "documentation": "^12.0.0",
    "gzip-size-cli": "^3.0.0",
    "npm-run-all": "^4.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.0.0",
    "rollup-plugin-terser": "^5.3.0",
    "standard-version": "^7.0.0"
  }
}
